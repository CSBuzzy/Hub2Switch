<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="500dp"
    android:layout_marginBottom="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="30dp"
    app:cardBackgroundColor="@color/colorGreyBck"
    app:cardCornerRadius="4dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Jhonny Matériel"
        android:layout_marginTop="25dp"
        android:textSize="25dp"/>

    <ImageView
        android:id="@+id/imageFicheClient"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="right"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_marginTop="100dp"
        android:background="@color/separatorColor"
        android:orientation="vertical">

    </LinearLayout>

    <TextView
        android:id="@+id/textAdresse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:textColor="@color/blackWord"
        android:text="Adresse"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textNomAdresse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:textColor="@color/colorGrey"
        android:text="Pierre Coudert"/>
    <TextView
        android:id="@+id/textNomRueAdresse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:textColor="@color/colorGrey"
        android:text="28, boulevard Albin Durand"/>
    <TextView
        android:id="@+id/textCodePostAdresse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:textColor="@color/colorGrey"
        android:text="51000 CHÂLONS-EN-CHAMPAGNE"/>
    <TextView
        android:id="@+id/textMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:textColor="@color/blackWord"
        android:text="Mail"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textAdresseMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:textColor="@color/colorGrey"
        android:text="pierre.coudert@gmail.com"/>
    <TextView
        android:id="@+id/textTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="310dp"
        android:textColor="@color/blackWord"
        android:text="Téléphone"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textNumTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:textColor="@color/colorGrey"
        android:text="06 58 23 02 01"/>

    <Button
        android:id="@+id/buttonContact"
        android:textSize="10dp"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="450dp"
        android:background="@color/colorGreen"
        android:textColor="@color/colorWhite"
        android:text="Contact" />

    <Button
        android:id="@+id/buttonMateriel"
        android:layout_width="150dp"
        android:layout_height="29dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="450dp"
        android:background="@color/colorGreen"
        android:text="Materiel"
        android:textColor="@color/colorWhite"
        android:textSize="10dp" />

</com.google.android.material.card.MaterialCardView>