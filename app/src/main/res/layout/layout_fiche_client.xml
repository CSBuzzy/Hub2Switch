<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="370dp"
    android:layout_height="550dp"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="30dp"
    app:cardBackgroundColor="@color/colorGreyBck"
    app:cardCornerRadius="4dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginLeft="10dp"
        android:text="@string/client_name"
        android:layout_marginTop="25dp"
        android:textSize="25dp"/>

    <ImageView
        android:id="@+id/imageFicheClient"
        android:layout_width="80dp"
        android:layout_height="76dp"
        android:layout_gravity="right"
        android:src="@drawable/picture" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_marginTop="100dp"
        android:background="@color/separatorColor"
        android:orientation="vertical">

    </LinearLayout>

    <TextView
        android:id="@+id/textAdresse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="150dp"
        android:textColor="@color/blackWord"
        android:text="@string/text_adresse"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textNomAdresse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="170dp"
        android:textColor="@color/colorGrey"
        android:text="@string/text_Nom_Adresse"/>
    <TextView
        android:id="@+id/textNomRueAdresse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="190dp"
        android:textColor="@color/colorGrey"
        android:text="@string/text_Rue_Adresse"/>
    <TextView
        android:id="@+id/textCodePostAdresse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="210dp"
        android:textColor="@color/colorGrey"
        android:text="@string/text_Code_Post_Adresse"/>
    <TextView
        android:id="@+id/textMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="250dp"
        android:textColor="@color/blackWord"
        android:text="@string/text_Mail"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textAdresseMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="270dp"
        android:textColor="@color/colorGrey"
        android:text="@string/text_Adresse_Mail"/>
    <TextView
        android:id="@+id/textTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="310dp"
        android:textColor="@color/blackWord"
        android:text="@string/text_Tel"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textNumTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="330dp"
        android:textColor="@color/colorGrey"
        android:text="@string/text_Num_Tel"/>

    <Button
        android:id="@+id/buttonContact"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/group"
        android:background="@color/colorGreen"
        android:textColor="@color/colorWhite"
        android:text="@string/button_Contact" />

    <Button
        android:id="@+id/buttonMateriel"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:paddingLeft="20dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="450dp"
        android:background="@color/colorGreen"
        android:drawableLeft="@drawable/computer"
        android:textColor="@color/colorWhite"
        android:text="@string/button_Materiel" />
</com.google.android.material.card.MaterialCardView>

    <ImageButton
        android:id="@+id/bouton_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="28dp"
        app:srcCompat="@drawable/plus_ajout"
        android:background="@android:color/transparent"/>

</RelativeLayout>